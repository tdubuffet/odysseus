{% extends "::back/layout.html.twig" %}

{% block body %}

<div class="form-box" id="login-box">
    <div class="header">{% trans %} login.sign_in_admin {% endtrans %}</div>
    <form action="" method="post">
        
        <div class="body bg-gray">
            
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="callout callout-danger">
                    <p>{{ flashMessage }}</p>
                </div>
            {% endfor %}
            
            <div class="form-group">
                <input type="text" name="mail" class="form-control" placeholder="{% trans %} login.mail {% endtrans %}"/>
            </div>
            <div class="form-group">
                <input type="password" name="password" class="form-control" placeholder="{% trans %} login.password {% endtrans %}"/>
            </div>          
            <div class="form-group">
                <input type="checkbox" name="remember_me"/>{% trans %} login.remerber_me {% endtrans %}
            </div>
        </div>
        <div class="footer">                                                               
            <button type="submit" name="connect" value="1" class="btn bg-olive btn-block">{% trans %} login.sign_me_in {% endtrans %}</button>  

            <p><a href="#">{% trans %} login.forgot_password {% endtrans %}</a></p>
        </div>
    </form>
</div>

{% endblock %}